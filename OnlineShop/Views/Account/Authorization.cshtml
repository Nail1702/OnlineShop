@{
    ViewData["Title"] = "Авторизация пользователя";
}

<div class="text-center text-uppercase text-success mb-5 mt-5">
    <h2 class="row-title">Вход</h2>
</div>
<form method="post">
    <div class="row justify-content-center mt-3">
        <div class="col-6 mb-3">
            <p>
                <label class="form-label">Логин</label><br />
                <input class="form-control" placeholder="Ваш логин" name="login" />
            </p>
            <p>
                <label class="form-label">Пароль</label><br />
                <input class="form-control" placeholder="Ваш пароль" name="password" />
            </p>
            <p>
                <label class="form-check-label">Запомнить меня</label>
                <input class="form-check-input" type="checkbox" value="true" name="IsRememberMe" />
            </p>
        </div>
    </div>
    <div class="text-center m-3">
        <button class="btn btn-outline-success" type="submit"
                asp-controller="Account"
                asp-action="Authorization">
            Войти
        </button>
    </div>
    <div class="text-center m-3">
        <a class="btn text-decoration-underline"
           asp-controller="Account"
           asp-action="">
            Регистрация нового пользователя
        </a>
    </div>
</form>