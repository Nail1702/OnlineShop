@model List<Product>
@{
    ViewData["Title"] = "Товары";
}

<div class="row mt-3">
    @await Html.PartialAsync("SideBar")
    <div class="col-9 mb-3">
        <div class="text-center text-uppercase text-success mb-5 mt-5">
            <h2 class="row-title">Товары</h2>
        </div>

        @if (Model != null && Model.Count > 0)
        {
            <div class="row justify-content-center mt-3">
                <div class="col-12">
                    <div class="text-end">
                        <a class="btn btn-outline-success mb-2 mt-2"
                           asp-area="Admin"
                           asp-controller="Product"
                           asp-action="Add">
                            Добавить новый продукт
                        </a>
                    </div>
                    <table class="table table-responsive table-striped table-hover mb-5">
                        <thead>
                            <tr align="center">
                                <th scope="col">#</th>
                                <th scope="col">Наименование товара</th>
                                <th scope="col">Цена, руб.</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.Count; i++)
                            {
                                <tr align="center" class="align-baseline">
                                    <td class="fw-bold">@(i + 1)</td>
                                    <td align="left">
                                        <a class="text-success"
                                           asp-area=""
                                           asp-controller="Product"
                                           asp-action="Index"
                                           asp-route-Id="@Model[i].Id">
                                            <h5>@Model[i].Name</h5>
                                        </a>
                                    </td>
                                    <td>@Model[i].Cost.ToString("c")</td>
                                    <td>
                                        <a class="btn btn-outline-success"
                                           asp-area="Admin"
                                           asp-controller="Product"
                                           asp-action="Update"
                                           asp-route-Id="@Model[i].Id">
                                            Редактировать
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-outline-success"
                                           asp-area="Admin"
                                           asp-controller="Product"
                                           asp-action="Delete"
                                           asp-route-Id="@Model[i].Id">
                                            Удалить
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr align="center">
                                <th colspan="2"></th>
                                <th colspan="3">
                                    Общее количество товаров: @Model.Count
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="text-center">
                <h2 class="row-title">В хранилище нет товаров!</h2>
            </div>
            <div class="text-center mt-5">
                <a class="btn btn-outline-success mb-2 mt-2"
                   asp-area="Admin"
                   asp-controller="Product"
                   asp-action="Add">
                    Добавить новый продукт
                </a>
            </div>
        }
    </div>
</div>